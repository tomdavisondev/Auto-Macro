<Window x:Class="AutoMacro.EnterMacroWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoMacro"
        mc:Ignorable="d"
        Title="EnterMacroWindow" Height="250" Width="400">
    <Grid>
        <TextBlock FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Enter keystrokes and click enter to insert macro"></TextBlock>
        <TextBlock x:Name="KeyCombo" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,130,0,0"/>
    </Grid>
</Window>
